<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#D9D9D9">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/top_navigation"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="홈 > 폴더"
            app:titleTextColor="@color/black"/>


        <LinearLayout
            android:id="@+id/folder_view"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:background="#97B0D1"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#5F5050">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="315dp"
                android:background="#5F5050"
                android:text="수정 날짜 순"
                android:textColor="#FFF"/>

        </LinearLayout>

        <!--<androidx.recyclerview.widget.RecyclerView
            android:id="@+id/memo_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D9D9D9"
            android:orientation="horizontal" />-->

        <LinearLayout
            android:id="@+id/addEditView"
            android:layout_width="match_parent"
            android:layout_height="529dp"
            android:background="#FFF">

            <Button
                android:id="@+id/addButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#D9D9"
                android:text="+"
                android:textSize="30dp" />


        </LinearLayout>




    </com.google.android.material.appbar.AppBarLayout>




    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="334dp"
        android:layout_height="676dp"
        android:layout_gravity="left"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/navi"
        app:menu="@menu/menu" />

    <LinearLayout
        android:id="@+id/item_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp" />


</androidx.drawerlayout.widget.DrawerLayout>