<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".IdeaPageActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="63dp">
        <!-- 뒤로가기 버튼 -->
        <ImageButton
            android:id="@+id/backButton"
            android:contentDescription="뒤로가기"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/back"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />
        <TextView
            android:text=" "
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="left"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="#5F5050"
        android:orientation="horizontal"
        android:gravity="right"
        >




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"/>
            <ImageButton
                android:id="@+id/transferButton"
                android:contentDescription="수정날짜순"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/transfer" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:text="수정 날짜 순"
            android:textColor="#FFFFFF"
            android:textSize="15dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#D9D9D9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="110dp"
                android:background="@drawable/custom_background"
                android:orientation="vertical"
                android:padding="10dp"
                android:elevation="15dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="초안: "
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"/> <!-- 이 부분에서 텍스트 색상을 지정할 수 있습니다 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="앞선 페이지의 메모입니다. 돌아가려면 뒤로가기를 누르세요."
                    android:textColor="@color/black"
                    android:textSize="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <View
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="#000000" />

                <LinearLayout
                    android:layout_width="370dp"
                    android:layout_height="40dp"
                    android:background="@drawable/custom_background_blue"
                    android:elevation="15dp"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/organize1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="자료를 추가해 보세요."
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold" /> <!-- 이 부분에서 텍스트 색상을 지정할 수 있습니다 -->

                </LinearLayout>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <View
                        android:layout_width="10dp"
                        android:layout_height="20dp"
                        android:background="#000000" />

                    <LinearLayout
                        android:layout_width="370dp"
                        android:layout_height="40dp"
                        android:background="@drawable/custom_background_blue"
                        android:elevation="15dp"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/organize2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="자료를 추가해 보세요."
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold" /> <!-- 이 부분에서 텍스트 색상을 지정할 수 있습니다 -->
                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:layout_width="10dp"
                    android:layout_height="30dp"
                    android:background="#000000"/>
                <LinearLayout
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_background"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:elevation="15dp"
                    >

                    <TextView
                        android:id="@+id/reviewdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "

                        android:textSize="15dp"/>

                    <TextView
                        android:id="@+id/reviewtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="15dp"/> <!-- 이 부분에서 텍스트 색상을 지정할 수 있습니다 -->

                    <TextView
                        android:id="@+id/reviewdetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="최종결과물에 대한 설명을 입력하세요."
                        android:textColor="@color/black"
                        android:textSize="15dp"/>
                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="0"
                        android:stepSize="1"
                        style="@style/Widget.AppCompat.RatingBar" />
                </LinearLayout>

                <View
                    android:layout_width="10dp"
                    android:layout_height="30dp"
                    android:background="#000000"/>


                <Button
                    android:id="@+id/myButton"
                    android:layout_width="219dp"
                    android:layout_height="47dp"
                    android:background="@drawable/custom_background"
                    android:drawableLeft="@drawable/plusbrown"
                    android:text="아이디어 구체화 및 실현"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>