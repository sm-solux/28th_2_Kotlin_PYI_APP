<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="63dp">
        <!-- 뒤로가기 버튼 -->
        <ImageButton
            android:id="@+id/backButton"
            android:contentDescription="뒤로가기"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/back"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />
        <TextView
            android:text="제목"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="left"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"/>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="#5F5050"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- 가로로 버튼을 배치할 LinearLayout -->
        <LinearLayout
            android:id="@+id/tag_container_layout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            >

            <!-- 첫 번째 버튼 (태그 추가) -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/write_btn_second"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@drawable/custom_background"
                android:elevation="15dp"
                android:onClick="showTagInputDialog"
                android:padding="0dp"
                android:text="+"
                android:textSize="20sp"
                android:textStyle="bold" />



            <!-- 두 번째 버튼 (추가 버튼) -->


        </LinearLayout>
    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CA7878"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- 첫 번째 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:button="@drawable/mycheck"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/date_textview_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="작성일자"
                    android:textSize="17dp"
                    android:textColor="@color/white"
                    android:onClick="showDatePickerDialog"/>

                <TextView
                    android:id="@+id/title_textview_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제목"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:onClick="showTitleEditDialog" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CA7878"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- 첫 번째 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:button="@drawable/mycheck"
                 />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/date_textview_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="작성일자"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:onClick="showDatePickerDialog"/>

                <TextView
                    android:id="@+id/title_textview_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제목"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:onClick="showTitleEditDialog"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CA7878"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- 첫 번째 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:button="@drawable/mycheck"
                 />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/date_textview_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="작성일자"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:onClick="showDatePickerDialog"/>

                <TextView
                    android:id="@+id/title_textview_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제목"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:onClick="showTitleEditDialog"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:background="#5F5050"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자료정리 및 구체화"
                android:textColor="#FFFFFF"
                android:textSize="21dp"
                android:textStyle="bold"
                android:padding="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#D9D9D9"
            android:padding="10dp"
            android:orientation="vertical">

            <!-- 여기에 박스와 텍스트를 추가 -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/listItem"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="left"
                android:text="작성일자, 제목"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/custom_background"
                android:elevation="15dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/write_btn"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="+"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/custom_background"
                android:elevation="15dp"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:background="#5F5050"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="결과물 기록 및 평가"
                android:textColor="#FFFFFF"
                android:textSize="21dp"
                android:textStyle="bold"
                android:padding="15dp"/>
        </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#D9D9D9"
        android:padding="10dp"
        android:orientation="vertical" >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/write_btn_F"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="+"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/custom_background"
            android:elevation="15dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#D9D9D9"
        android:orientation="horizontal"
        android:layout_gravity="left">

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="0"
            android:stepSize="1"
            style="@style/Widget.AppCompat.RatingBar" />


        <TextView
            android:layout_width="122dp"
            android:layout_height="match_parent" />


        <ImageButton
            android:id="@+id/shareButton"
            android:contentDescription="공유하기"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="match_parent" />
    </LinearLayout>




</LinearLayout>